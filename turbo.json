{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["RISK_APP_SECRET", "SERVER_NODE_REAL_API_ETH", "SERVER_NODE_REAL_API_GOERLI"],
      "outputs": ["dist/**", ".next/**/*", "!.next/cache/**", "!.vercel/**/*"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:config": {
      "dependsOn": ["^build"]
    },
    "build:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "build:uikit": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["@pancakeswap/next-config#build"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["@pancakeswap/next-config#build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "build:list": {
      "outputs": ["list/**"]
    },
    "integration-test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
